root = true

[*]
end_of_line = lf

[*.{c,cpp,h,hpp}]
indent_style = tab
indent_size = 8
tab_width = 8
trim_trailing_whitespace = true
insert_final_newline = true

[*.lua]
indent_style = tab
indent_size = 8
tab_width = 8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false
insert_final_newline = true

[*.yml]
indent_style = space
indent_size = 2
insert_final_newline = true
